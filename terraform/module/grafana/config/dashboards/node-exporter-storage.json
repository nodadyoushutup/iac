        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_time_seconds_total{instance=~\"$node\", device!~\"loop.*|dm-.*\"}[5m]) / rate(node_disk_reads_completed_total{instance=~\"$node\", device!~\"loop.*|dm-.*\"}[5m])",
          "legendFormat": "{{instance}} read",
          "refId": "A"
        },
