{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dockerfile": {
    "managerFilePatterns": [
      "/(^|/)docker/jenkins/controller/Dockerfile$/",
      "/(^|/)docker/jenkins/agent/Dockerfile$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Fallback matcher for Docker images pinned inside Terraform locals blocks",
      "managerFilePatterns": [
        "/terraform/module/.+\\.tf$/"
      ],
      "matchStrings": [
        "image\\s*=\\s*\"(?<depName>[-./+\\w]+):(?<currentValue>[^\"@\\s]+)\"",
        "image\\s*=\\s*\"(?<depName>[-./+\\w]+):(?<currentValue>[^\"@\\s]+)@sha256:(?<currentDigest>[A-Fa-f0-9]{64})\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "minio/minio"
      ],
      "enabled": false
    }
  ]
}
