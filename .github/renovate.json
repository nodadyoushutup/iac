{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dockerfile": {
    "managerFilePatterns": [
      "/(^|/)docker/jenkins/controller/Dockerfile$/",
      "/(^|/)docker/jenkins/agent/Dockerfile$/"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "minio/minio"
      ],
      "enabled": false
    }
  ]
}
